
// File: sale-common/sale/CrossChainClaim2.sol
// SPDX-License-Identifier: BUSL-1.1

pragma solidity 0.8.21;

import "../../base/OfficialSignatureHelper.sol";
import "../../base/MultiSigWithdrawable.sol";
import "../../base/Accessable.sol";
import "../../base/PauseReturnable.sol";
import "../interfaces/IManager.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";
import "../../Constant.sol";

contract CrossChainClaim2 is OfficialSignatureHelper, MultiSigWithdrawable, Accessable, PauseReturnable, ReentrancyGuard {

    IDataLog private immutable _logger;
    address immutable public saleContractAddress;
    address public tokenAddress;
    uint public totalFundIn;
    uint public totalClaimed;

    struct ClaimInfo {
        uint entitlement;
        uint claimed;
    }

    mapping(address => ClaimInfo) public claimMap;

    // Vesting Info
    uint public vestStartTime;
    uint public vestDuration;
    uint public tgeReleasePcnt;
    uint private vestPcnt;

    event FundIn(address from, uint amount);


    constructor(IManager mgr, address saleContract) 
        OfficialSignatureHelper(mgr.getOfficialSigner()) 
        Accessable(mgr.getRoles()) {
            require(saleContract != Constant.ZERO, "Invalid Address");
            saleContractAddress = saleContract;
            _logger = mgr.getLogger();
    }

    function setVestingInfo(uint initialReleasePcnt, uint startTime, uint duration) external onlyConfigurator {

        require(initialReleasePcnt <= Constant.PCNT_100, "More than 100%");
        require(startTime > 0 && duration > 0, "Wrong timings");
        require(vestStartTime == 0 || block.timestamp < vestStartTime, "Vesting already started");

        vestStartTime = startTime;
        vestDuration = duration;
        tgeReleasePcnt = initialReleasePcnt;
        vestPcnt = Constant.PCNT_100 - tgeReleasePcnt;
    }

    function setPause(bool set) public onlyDaoAdmin {
        _setPause(set);
    }

    function multiSigWithdrawToken(address token, uint amount) external onlyDaoAdmin {
        _multiSigWithdrawToken(token, amount, msg.sender);

        if (token == tokenAddress) {
            totalFundIn -= amount;
        }
    }

    function fundIn(address token, address from, uint amount) external notPaused onlyApprover {
        require(token != Constant.ZERO, "Invalid token");
        require(amount > 0, "Invalid amount");
        
        if (tokenAddress == Constant.ZERO) {
            tokenAddress = token; 
        } else {
            // If multiple funded in, make sure the token address is the same
            require(tokenAddress == token, "Wrong token");  
        }
        totalFundIn += amount;

       _transferTokenFrom(tokenAddress, amount, from, address(this));
       emit FundIn(from, amount);
    }

    // When first time claim, the amount is recorded.
    function claimTokens(uint entitlement, bytes memory signature) external notPaused nonReentrant {
      
        require (_verify(msg.sender, entitlement, signature), "Invalid");
        require(totalFundIn > 0, "Not funded in");

        // Get Claimable portion
        (uint total, , uint claimable) = getClaimable(msg.sender, entitlement, signature);
    
        if (claimable > 0) {    
            ClaimInfo storage info = claimMap[msg.sender];
            if (info.entitlement == 0) {
                info.entitlement = total; // Set entitlement at first claim
            } else {
                // Sanity check
                require(total == info.entitlement, "Wrong entitlement check");
            }
            require(claimable <= totalFundIn - totalClaimed, "Not enough Fund In");

            // Transfer claimable amount
            _transferTokenOut(tokenAddress, claimable, msg.sender);
            totalClaimed += claimable;

            info.claimed += claimable;
            // Sanity check
            require(info.claimed <= info.entitlement, "Exceeded entilement");

            _logger.log(address(this), msg.sender, uint(DataSource.Campaign), uint(DataAction.ClaimTokens), claimable, 0);
        }
    }
    
    function getClaimable(address user, uint entitlement, bytes memory signature) public view returns (uint total, uint claimed, uint claimable) {
        
        if (_verify(user, entitlement, signature) && vestStartTime != 0) {

            // Add 20% to token entitlement due to price change from $0.012 to $0.01
            entitlement += entitlement / 5; 
            total = entitlement;

            if ( block.timestamp > vestStartTime) {
  
                // Get the tge portion
                uint totalReleasable = (tgeReleasePcnt * entitlement) / Constant.PCNT_100; // eg: 20%

                // Get the vesting portion
                uint elapsed = block.timestamp - vestStartTime;
                elapsed = _min(elapsed , vestDuration);
                uint vestedTotal = (vestPcnt * entitlement) / Constant.PCNT_100; // eg: 80%
                totalReleasable += (elapsed * vestedTotal) / vestDuration;

                claimed = claimMap[user].claimed;
                claimable = totalReleasable - claimed;
            }
        }
    }

    function _verify(address user, uint entitlement, bytes memory signature) private view returns (bool) {
        bytes32 hash =  keccak256(abi.encodePacked(saleContractAddress, user, entitlement));
        return _verifyHash(hash, signature);
    }
    function _min(uint a, uint b) internal pure returns (uint) {
        return a < b ? a : b;
    }
}


// File: Constant.sol
// SPDX-License-Identifier: BUSL-1.1


pragma solidity 0.8.21;

library Constant {

    address public constant ZERO                                = address(0);
    uint    public constant E18                                 = 1e18;
    uint    public constant PCNT_100                            = 1e18;
    uint    public constant PCNT_50                             = 5e17;
    uint    public constant PCNT_5                              = 5e16;
    uint    public constant E12                                 = 1e12;
    uint    public constant MAX_INSURANCE_DURATION              = 10 days; 
    uint    public constant MIN_QUALIFY_SV_LAUNCH               = 100e18;
    bytes   public constant ETH_SIGN_PREFIX                     = "\x19Ethereum Signed Message:\n32";
  
}






// File: @openzeppelin/contracts/utils/ReentrancyGuard.sol
// SPDX-License-Identifier: MIT
// OpenZeppelin Contracts (last updated v5.0.0) (utils/ReentrancyGuard.sol)

pragma solidity ^0.8.20;

/**
 * @dev Contract module that helps prevent reentrant calls to a function.
 *
 * Inheriting from `ReentrancyGuard` will make the {nonReentrant} modifier
 * available, which can be applied to functions to make sure there are no nested
 * (reentrant) calls to them.
 *
 * Note that because there is a single `nonReentrant` guard, functions marked as
 * `nonReentrant` may not call one another. This can be worked around by making
 * those functions `private`, and then adding `external` `nonReentrant` entry
 * points to them.
 *
 * TIP: If you would like to learn more about reentrancy and alternative ways
 * to protect against it, check out our blog post
 * https://blog.openzeppelin.com/reentrancy-after-istanbul/[Reentrancy After Istanbul].
 */
abstract contract ReentrancyGuard {
    // Booleans are more expensive than uint256 or any type that takes up a full
    // word because each write operation emits an extra SLOAD to first read the
    // slot's contents, replace the bits taken up by the boolean, and then write
    // back. This is the compiler's defense against contract upgrades and
    // pointer aliasing, and it cannot be disabled.

    // The values being non-zero value makes deployment a bit more expensive,
    // but in exchange the refund on every call to nonReentrant will be lower in
    // amount. Since refunds are capped to a percentage of the total
    // transaction's gas, it is best to keep them low in cases like this one, to
    // increase the likelihood of the full refund coming into effect.
    uint256 private constant NOT_ENTERED = 1;
    uint256 private constant ENTERED = 2;

    uint256 private _status;

    /**
     * @dev Unauthorized reentrant call.
     */
    error ReentrancyGuardReentrantCall();

    constructor() {
        _status = NOT_ENTERED;
    }

    /**
     * @dev Prevents a contract from calling itself, directly or indirectly.
     * Calling a `nonReentrant` function from another `nonReentrant`
     * function is not supported. It is possible to prevent this from happening
     * by making the `nonReentrant` function external, and making it call a
     * `private` function that does the actual work.
     */
    modifier nonReentrant() {
        _nonReentrantBefore();
        _;
        _nonReentrantAfter();
    }

    function _nonReentrantBefore() private {
        // On the first call to nonReentrant, _status will be NOT_ENTERED
        if (_status == ENTERED) {
            revert ReentrancyGuardReentrantCall();
        }

        // Any calls to nonReentrant after this point will fail
        _status = ENTERED;
    }

    function _nonReentrantAfter() private {
        // By storing the original value once again, a refund is triggered (see
        // https://eips.ethereum.org/EIPS/eip-2200)
        _status = NOT_ENTERED;
    }

    /**
     * @dev Returns true if the reentrancy guard is currently set to "entered", which indicates there is a
     * `nonReentrant` function in the call stack.
     */
    function _reentrancyGuardEntered() internal view returns (bool) {
        return _status == ENTERED;
    }
}


